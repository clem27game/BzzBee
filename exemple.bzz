
# Programme d'exemple BzzBee v3.0 - Édition Avancée!
# Les abeilles peuvent maintenant faire bien plus!

bzz BONJOUR

bzz R couleur jaune -> "=== BIENVENUE DANS BZZBEE 3.0! ==="

# Test des nouvelles fonctionnalités mathématiques avancées
bzz R couleur cyan -> "=== Mathématiques Avancées ==="
bzz CALCUL sin(80)
bzz CALCUL cos(60)
bzz CALCUL sqrt(16)
bzz CALCUL 4 ^ (5 + 1)

# Test des tableaux
bzz R couleur vert -> "=== Tableaux et Listes ==="
bzz TABLEAU nombres -> "1,2,3,4,5"
bzz TABLEAU notes -> "7.5,8.2,9.1,6.8"
bzz MONTRE nombres
bzz MONTRE notes

# Test des nombres aléatoires
bzz R couleur magenta -> "=== Génération Aléatoire ==="
bzz HASARD 400 1000
bzz HASARD 10 50
bzz HASARD 1 6

# Test de la musique
bzz R couleur bleu -> "=== Musique des Abeilles ==="
bzz MUSIQUE do 500
bzz MUSIQUE re 500
bzz MUSIQUE mi 500
bzz MUSIQUE fa 500
bzz MUSIQUE sol 500

# Test du canvas et du dessin
bzz R couleur rouge -> "=== Canvas Artistique ==="
bzz TOILE INIT
bzz PIXEL 5 5 *
bzz PIXEL 10 10 @
bzz PIXEL 15 8 #
bzz TEXTE 2 2 "BZZBEE"
bzz LIGNE 0 0 20 10 -
bzz LIGNE 0 10 20 0 +
bzz TOILE MONTRE

# Test des nouvelles formes ASCII
bzz R couleur jaune -> "=== Nouvelles Formes ASCII ==="
bzz DESSINE soleil
bzz DESSINE nuage
bzz DESSINE coeur

# Test du temps et des utilitaires
bzz R couleur cyan -> "=== Utilitaires Système ==="
bzz TEMPS

# Variables et calculs avancés
bzz R couleur vert -> "=== Variables et Expressions ==="
bzz STOCK angle -> 45
bzz CALCUL sin(angle)
bzz CALCUL cos(angle)

# Boucle avec nouvelles fonctionnalités
bzz R couleur magenta -> "=== Boucle Créative ==="
bzz POUR compteur DE 1 A 3
bzz R console -> "Itération:"
bzz MONTRE compteur
bzz HASARD 1 10
bzz MUSIQUE la 200
bzz SUIVANT

# Test interactif amélioré
bzz R couleur bleu -> "=== Test Interactif ==="
bzz QUIZ "Combien font sin(90)?" -> "1"

# Effacement et fin créative
bzz R couleur rouge -> "=== Finalisation ==="
bzz R console -> "Programme BzzBee 3.0 terminé!"
bzz DORT 2000

bzz R couleur vert -> "Merci d'avoir testé BzzBee 3.0! 🐝🎨🎵"
bzz AU REVOIR
